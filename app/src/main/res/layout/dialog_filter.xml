<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Gondala"
            android:fontFamily="@font/poppinsregular"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/no_gondala"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="No Gondala"/>

            <ImageButton
                android:id="@+id/btnScanGondala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/scanner"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode Barang"
            android:fontFamily="@font/poppinsregular"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/kode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Kode Barang"/>

            <ImageButton
                android:id="@+id/btnScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/scanner"/>
        </LinearLayout>

        <!-- Sort by (Nama, Tanggal, Nomor) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Urutkan Berdasarkan:"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="10dp"/>

        <Spinner
            android:id="@+id/spinnerSortBy"
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <!-- Ascending / Descending -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Urutan:"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="10dp"/>

        <RadioGroup
            android:id="@+id/radioGroupOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioAsc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(A–Z) ▼"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Z–A) ▲" />
        </RadioGroup>

        <Button
            android:id="@+id/simpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_grey"
            android:layout_marginTop="20dp"
            android:text="Filter"/>
    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
