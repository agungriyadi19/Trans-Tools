<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    tools:context=".DetailItemFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:padding="10dp">

            <ImageView
                android:id="@+id/kembali"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/kembali"
                android:paddingEnd="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penarikan Barang"
                android:textSize="20sp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/white"
                android:paddingStart="10dp"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/itemName"
                        android:textSize="18sp"
                        android:text="Nama"
                        android:fontFamily="@font/poppinsbold"/>
                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Gondala"
                            android:fontFamily="@font/poppinsregular"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:fontFamily="@font/poppinsregular"/>

                        <TextView
                            android:id="@+id/noGondalaValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"/>
                    </TableRow>

                    <TableRow
                        android:paddingTop="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kode Barang"
                            android:fontFamily="@font/poppinsregular"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:fontFamily="@font/poppinsregular"/>

                        <TextView
                            android:id="@+id/kodeBarangValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"/>
                    </TableRow>

                    <TableRow
                        android:paddingTop="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Expired"
                            android:fontFamily="@font/poppinsregular"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:fontFamily="@font/poppinsregular"/>

                        <TextView
                            android:id="@+id/tanggalExpiredValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"/>
                    </TableRow>

                    <TableRow
                        android:paddingTop="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status Item"
                            android:fontFamily="@font/poppinsregular"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:fontFamily="@font/poppinsregular"/>

                        <TextView
                            android:id="@+id/statusItemValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"/>
                    </TableRow>

                    <TableRow
                        android:paddingTop="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jumlah Ditarik"
                            android:fontFamily="@font/poppinsregular"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:fontFamily="@font/poppinsregular"/>

                        <EditText
                            android:id="@+id/jum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Jumlah Barang"
                            android:inputType="number"
                            android:paddingStart="5dp"/>
                    </TableRow>

                </TableLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <androidx.cardview.widget.CardView
                        android:id="@+id/camera"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_margin="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Judul "Bukti Penarikan" -->
                            <TextView
                                android:id="@+id/textViewTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bukti Penarikan"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:padding="16dp"/>

                            <!-- Area untuk mengunggah file -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:gravity="center">

                                <!-- Ikon untuk mengunggah file -->
                                <ImageView
                                    android:id="@+id/hasilFoto"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/outline_add_photo_alternate_24"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilih barang habis terjual jika barang sudah habis terjual, atau tarik barang jika masih tersedia."
                    android:textColor="@color/colorOnSurface"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsregular"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/sold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Barang habis terjual"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_shape_grey"
                    android:fontFamily="@font/poppinsregular"/>

                <Button
                    android:id="@+id/tarik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape_grey"
                    android:layout_marginTop="20dp"
                    android:text="Tarik Barang"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>
